main
  h3.debug-info Bellow is being filtered by category id: {{$route.current.params.categoryId}}
  ul.articles.vertical-list.animated.fadeIn
    li(ng-repeat="article in articles | filter:{category_id: $route.current.params.categoryId }").white-box
      article
        img(src="{{article.Image}}")
        section.description
          h3
            a(href="{{article.url}}") {{article.Title}}
          | {{article.Body}}
